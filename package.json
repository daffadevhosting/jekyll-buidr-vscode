{
  "name": "jekyll-editor",
  "displayName": "Jekyll Editor",
  "description": "AI-powered Jekyll editing right in your VS Code.",
  "version": "0.1.1",
  "publisher": "daffadev",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jekyll-buildr.login",
        "title": "Jekyll Buildr: Login with GitHub"
      },
      {
        "command": "jekyll-buildr.generateComponent",
        "title": "Jekyll Buildr: Generate Component with AI ðŸ‘‘"
      },
      {
        "command": "jekyll-buildr.scaffoldBoilerplate",
        "title": "Jekyll Buildr: Create Jekyll Boilerplate",
        "category": "Jekyll Buildr"
      },
      {
        "command": "jekyll-buildr.generateComponent",
        "title": "Jekyll Buildr: Generate AI Component",
        "category": "Jekyll Buildr"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "jekyllBuildr.isPro",
          "command": "jekyll-buildr.generateComponent",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jekyll-buildr-sidebar",
          "title": "Jekyll Buildr",
          "icon": "./media/icon.svg"
        }
      ]
    },
    "views": {
      "jekyll-buildr-sidebar": [
        {
          "id": "jekyllBuildr.createPostView",
          "name": "Create Post",
          "type": "webview",
          "icon": "media/icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "firebase": "^10.12.2"
  }
}